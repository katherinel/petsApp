!!!
%html
  %head
    %title PetsApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #navbar-main.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          =link_to "Petbook", root_url, :class => "navbar-brand"
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                %p.navbar-text
                  Logged in as
                  %strong= current_user.email
              %li
                = link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
            - else
              %li= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
              %li= link_to "Login", new_user_session_path, :class => 'navbar-link'
    .container
      - if notice
        .alert.alert-success
          %p= notice
      - if alert
        .alert.alert-danger
          %p= alert
      = yield
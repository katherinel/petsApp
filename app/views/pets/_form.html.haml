= form_for(@pet) do |f|
  - if @pet.errors.any?
    #error_explanation
      %h2
        = pluralize(@pet.errors.count, "error")
        prohibited this pet from being saved:
      %ul
        - @pet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :birthday
    %br/
    = f.text_field :birthday, :data => { :provide => "datepicker", 'date-format' => 'yyyy-mm-dd' }, :class => "datepicker"
  .field
    = f.label :gender_id
    %br/
    = f.collection_select(:gender_id, Gender.all, :id, :name)
  .field
    = f.label :species_id
    %br/
    = f.collection_select(:species_id, Species.all, :id, :name)
  .field
    = f.label :image
    %br/
    = f.file_field :image
    - if f.object.image?
      = image_tag f.object.image.medium.url
      = f.label :remove_image
      = f.check_box :remove_image
  .actions
    = f.submit
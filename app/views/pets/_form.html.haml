= form_for(@pet) do |f|
  - if @pet.errors.any?
    #error_explanation
      %h2
        = pluralize(@pet.errors.count, "error")
        prohibited this pet from being saved:
      %ul
        - @pet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :birthday
    %br/
    = f.text_field :birthday, :data => { :provide => "datepicker" }
  .field
    = f.label :gender_id
    %br/
    = f.collection_select(:gender_id, Gender.all, :id, :name)
  .field
    = f.label :image_id
    %br/
    = f.number_field :image_id
  .actions
    = f.submit